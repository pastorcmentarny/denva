{
  "version": 1,
  "disable_existing_loggers": false,
  "formatters": {
    "simple": {
      "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
    }
  },
  "handlers": {
    "console": {
      "class": "logging.StreamHandler",
      "level": "DEBUG",
      "formatter": "simple",
      "stream": "ext://sys.stdout"
    },
    "log_file_handler": {
      "class": "logging.handlers.TimedRotatingFileHandler",
      "level": "DEBUG",
      "formatter": "simple",
      "filename": "/home/pi/logs/logs.log",
      "when": "midnight",
      "encoding": "utf8",
      "backupCount": 30
    },
    "warnings_file_handler": {
      "class": "logging.handlers.TimedRotatingFileHandler",
      "level": "DEBUG",
      "formatter": "simple",
      "filename": "/home/pi/logs/warnings.log",
      "when": "midnight",
      "encoding": "utf8",
      "backupCount": 30
    },
    "server_file_handler": {
      "class": "logging.handlers.TimedRotatingFileHandler",
      "level": "DEBUG",
      "formatter": "simple",
      "filename": "/home/pi/logs/server.log",
      "when": "midnight",
      "encoding": "utf8",
      "backupCount": 30
    },
    "stats_file_handler": {
      "class": "logging.handlers.TimedRotatingFileHandler",
      "level": "INFO",
      "formatter": "simple",
      "filename": "/home/pi/logs/stats.log",
      "when": "midnight",
      "encoding": "utf8",
      "backupCount": 30
    },
    "healthcheck_file_handler": {
      "class": "logging.handlers.TimedRotatingFileHandler",
      "level": "INFO",
      "formatter": "simple",
      "filename": "/home/pi/logs/healthcheck.log",
      "when": "midnight",
      "encoding": "utf8",
      "backupCount": 30
    }
  },
  "loggers": {
    "app": {
      "level": "DEBUG",
      "handlers": [
        "log_file_handler"
      ],
      "propagate": false
    },
    "warnings": {
      "level": "INFO",
      "handlers": [
        "warnings_file_handler"
      ],
      "propagate": false
    },
    "server": {
      "level": "DEBUG",
      "handlers": [
        "server_file_handler"
      ],
      "propagate": false
    },
    "stats": {
      "level": "INFO",
      "handlers": [
        "stats_file_handler"
      ],
      "propagate": false
    },
    "hc": {
      "level": "INFO",
      "handlers": [
        "healthcheck_file_handler"
      ],
      "propagate": false
    }
  },
  "root": {
    "level": "DEBUG",
    "handlers": [
      "console"
    ]
  }
}